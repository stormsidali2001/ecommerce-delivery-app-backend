// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")

}


model  User {
  id Int @default(autoincrement()) @id
  email String
  username String
  password String
  admin Admin?
  client Client?
  deliveryMan DeliveryMan?
  roles Role[] @relation("user_roles") 

}

model Role{
  name String @unique @id
  users User[] @relation("user_roles")
}


model Admin{
  id Int @default(autoincrement()) @id
  firstName String
  lastName String
  user User @relation(fields: [userId],references: [id])
  userId Int @unique

}
model Client{
  id Int @default(autoincrement()) @id
  ssn String @unique
  firstName String
  lastName String
  dob String
  phoneNumber String
  address String
  user User @relation(fields: [userId],references: [id])
  userId Int @unique
  orders Order[]

  orderReviews OrderReview[]

}
model DeliveryMan{
  id Int @default(autoincrement()) @id
  firstName String
  lastName String
  user User @relation(fields: [userId],references: [id])
  userId Int @unique
}

model Product{
  id Int @default(autoincrement()) @id
  name String
  description String
  quantity Int
  price Int
  imageUrl Int

  orders ProductsOnOrder[]
}

model Order{
  id Int @default(autoincrement()) @id
  status OrderStatus @default(WAIT)
  client Client @relation(fields: [clientId],references: [id])
  createdAt DateTime @default(now())
  clientId Int
  products ProductsOnOrder[] 

  reviews OrderReview[]
}
model ProductsOnOrder{
  quantity Int
  order Order @relation(fields: [orderId],references: [id])
  orderId Int 
  product Product @relation(fields: [productId],references: [id])
  productId Int 
  @@id([orderId,productId])
}

model OrderReview{
  id Int @default(autoincrement()) @id
  description String
  stars Int
  createdAt DateTime @default(now())

  client Client @relation(fields: [clientId],references: [id])
  clientId Int
  
  order Order @relation(fields: [orderId],references: [id])
  orderId Int

}

enum OrderStatus{
    WAIT
    APPROVED
    ASSIGNED
    UNDER_DELIVERY
    DELIVERED
}